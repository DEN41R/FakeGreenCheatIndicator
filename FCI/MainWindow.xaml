<Window x:Class="FakeCheatIndicator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="FCI v2.0" 
        Height="650" Width="1000"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        TextElement.Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}">
    
    <materialDesign:DialogHost>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

        
            <Border Grid.Column="0" Background="{StaticResource SidebarBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    
                    <StackPanel Grid.Row="0" Margin="0,30,0,20">
                        <materialDesign:PackIcon Kind="ChartDonut" 
                                                Width="48" Height="48"
                                                Foreground="{StaticResource ForegroundBrush}"
                                                HorizontalAlignment="Center"/>
                        <TextBlock Text="FCI" 
                                  Foreground="{StaticResource ForegroundBrush}"
                                  FontSize="24" FontWeight="Bold"
                                  Margin="0,15,0,5"
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="v2.0 Material Design" 
                                  Foreground="{StaticResource SecondaryForegroundBrush}"
                                  FontSize="11"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>

                    
                    <StackPanel Grid.Row="1" Margin="0,20,0,0">
                        <Button x:Name="BtnActivation" 
                                Style="{StaticResource SidebarButtonActiveStyle}"
                                Click="BtnActivation_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Power" Width="24" Height="24" 
                                                        VerticalAlignment="Center" Margin="0,0,15,0"/>
                                <TextBlock Text="Активация" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button x:Name="BtnSettings" 
                                Style="{StaticResource SidebarButtonStyle}"
                                Click="BtnSettings_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Cog" Width="24" Height="24" 
                                                        VerticalAlignment="Center" Margin="0,0,15,0"/>
                                <TextBlock Text="Настройки" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button x:Name="BtnAbout" 
                                Style="{StaticResource SidebarButtonStyle}"
                                Click="BtnAbout_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="InformationOutline" Width="24" Height="24" 
                                                        VerticalAlignment="Center" Margin="0,0,15,0"/>
                                <TextBlock Text="О программе" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                 
                    <StackPanel Grid.Row="2" Margin="20,0,20,20">
                        <Separator Margin="0,0,0,15" Background="{StaticResource BorderBrush}"/>
                        <TextBlock Text="Material Design UI" 
                                  Foreground="{StaticResource SecondaryForegroundBrush}"
                                  FontSize="10"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <Grid Margin="40,30">
                    
                    <StackPanel x:Name="PageActivation" Visibility="Visible">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <materialDesign:PackIcon Kind="Power" Width="32" Height="32" 
                                                    VerticalAlignment="Center" Margin="0,0,15,0"/>
                            <TextBlock Text="Активация индикатора" 
                                      FontSize="28" FontWeight="Bold" 
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Text="Управление отображением индикатора на экране" 
                                  Foreground="{StaticResource SecondaryForegroundBrush}"
                                  FontSize="14" Margin="0,0,0,30"/>

                        <materialDesign:Card Padding="30" Margin="0,0,0,20" 
                                            UniformCornerRadius="8">
                            <StackPanel>
                                <TextBlock Text="Статус индикатора" 
                                          FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
                                    <Ellipse x:Name="StatusIndicator" Width="16" Height="16" 
                                            Fill="{StaticResource DangerBrush}" Margin="0,0,12,0"/>
                                    <TextBlock x:Name="StatusText" Text="Неактивен" 
                                              FontSize="16" VerticalAlignment="Center"/>
                                </StackPanel>

                                <Button x:Name="BtnToggle" 
                                        Content="АКТИВИРОВАТЬ ИНДИКАТОР"
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Width="250" Height="45"
                                        HorizontalAlignment="Left"
                                        Click="BtnToggle_Click"/>
                            </StackPanel>
                        </materialDesign:Card>

                        <materialDesign:Card Padding="30" UniformCornerRadius="8">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                    <materialDesign:PackIcon Kind="InformationOutline" Width="24" Height="24" 
                                                            VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Информация" 
                                              FontSize="18" FontWeight="SemiBold" 
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <materialDesign:PackIcon Kind="CheckCircle" Width="20" Height="20" 
                                                            Foreground="{StaticResource SuccessBrush}"
                                                            VerticalAlignment="Top" Margin="0,2,10,0"/>
                                    <TextBlock Text="Индикатор отображается поверх всех окон" 
                                              TextWrapping="Wrap" FontSize="14"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <materialDesign:PackIcon Kind="CheckCircle" Width="20" Height="20" 
                                                            Foreground="{StaticResource SuccessBrush}"
                                                            VerticalAlignment="Top" Margin="0,2,10,0"/>
                                    <TextBlock Text="Перетаскивайте индикатор мышью для изменения позиции" 
                                              TextWrapping="Wrap" FontSize="14"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="CheckCircle" Width="20" Height="20" 
                                                            Foreground="{StaticResource SuccessBrush}"
                                                            VerticalAlignment="Top" Margin="0,2,10,0"/>
                                    <TextBlock Text="Настройте внешний вид в разделе 'Настройки'" 
                                              TextWrapping="Wrap" FontSize="14"/>
                                </StackPanel>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>

                    
                    <StackPanel x:Name="PageSettings" Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <materialDesign:PackIcon Kind="Cog" Width="32" Height="32" 
                                                    VerticalAlignment="Center" Margin="0,0,15,0"/>
                            <TextBlock Text="Настройки индикатора" 
                                      FontSize="28" FontWeight="Bold" 
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Text="Настройте внешний вид и поведение индикатора" 
                                  Foreground="{StaticResource SecondaryForegroundBrush}"
                                  FontSize="14" Margin="0,0,0,30"/>

                        
                        <materialDesign:Card Padding="30" Margin="0,0,0,20" UniformCornerRadius="8">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
                                    <materialDesign:PackIcon Kind="Palette" Width="24" Height="24" 
                                                            VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Внешний вид" 
                                              FontSize="18" FontWeight="SemiBold" 
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                                
                              
                                <TextBlock Text="Прозрачность" FontSize="14" FontWeight="Medium" Margin="0,0,0,8"/>
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider x:Name="SliderOpacity" 
                                           Minimum="10" Maximum="100" Value="100" 
                                           TickFrequency="10" IsSnapToTickEnabled="True"
                                           ValueChanged="SliderOpacity_ValueChanged"/>
                                    <TextBlock x:Name="TxtOpacity" Text="100%" Grid.Column="1"
                                              FontSize="16" FontWeight="Bold"
                                              HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Grid>

                                
                                <TextBlock Text="Размер индикатора" FontSize="14" FontWeight="Medium" Margin="0,0,0,8"/>
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider x:Name="SliderSize" 
                                           Minimum="10" Maximum="60" Value="21" 
                                           TickFrequency="5" IsSnapToTickEnabled="True"
                                           ValueChanged="SliderSize_ValueChanged"/>
                                    <TextBlock x:Name="TxtSize" Text="21 px" Grid.Column="1"
                                              FontSize="16" FontWeight="Bold"
                                              HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Grid>

                               
                                <TextBlock Text="Толщина обводки" FontSize="14" FontWeight="Medium" Margin="0,0,0,8"/>
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider x:Name="SliderBorder" 
                                           Minimum="1" Maximum="8" Value="3" 
                                           TickFrequency="1" IsSnapToTickEnabled="True"
                                           ValueChanged="SliderBorder_ValueChanged"/>
                                    <TextBlock x:Name="TxtBorder" Text="3 px" Grid.Column="1"
                                              FontSize="16" FontWeight="Bold"
                                              HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Grid>

                                
                                <TextBlock Text="Цвет индикатора" FontSize="14" FontWeight="Medium" Margin="0,0,0,8"/>
                                <ComboBox x:Name="CmbColor" 
                                         SelectedIndex="0"
                                         SelectionChanged="CmbColor_SelectionChanged">
                                    <ComboBoxItem>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="16" Height="16" Fill="Lime" Margin="0,0,10,0"/>
                                            <TextBlock Text="Зеленый"/>
                                        </StackPanel>
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="16" Height="16" Fill="Red" Margin="0,0,10,0"/>
                                            <TextBlock Text="Красный"/>
                                        </StackPanel>
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="16" Height="16" Fill="DeepSkyBlue" Margin="0,0,10,0"/>
                                            <TextBlock Text="Синий"/>
                                        </StackPanel>
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="16" Height="16" Fill="Yellow" Margin="0,0,10,0"/>
                                            <TextBlock Text="Желтый"/>
                                        </StackPanel>
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="16" Height="16" Fill="White" Margin="0,0,10,0"/>
                                            <TextBlock Text="Белый"/>
                                        </StackPanel>
                                    </ComboBoxItem>
                                </ComboBox>
                            </StackPanel>
                        </materialDesign:Card>

                        
                        <materialDesign:Card Padding="30" Margin="0,0,0,20" UniformCornerRadius="8">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
                                    <materialDesign:PackIcon Kind="CursorMove" Width="24" Height="24" 
                                                            VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Позиция на экране" 
                                              FontSize="18" FontWeight="SemiBold" 
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="X координата" FontSize="12" Margin="0,0,0,5"/>
                                        <TextBox x:Name="TxtPosX" 
                                                Text="25"
                                                TextChanged="TxtPos_TextChanged"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Y координата" FontSize="12" Margin="0,0,0,5"/>
                                        <TextBox x:Name="TxtPosY" 
                                                Text="15"
                                                TextChanged="TxtPos_TextChanged"/>
                                    </StackPanel>
                                </Grid>

                                <Button Content="СБРОСИТЬ ПОЗИЦИЮ" 
                                       Style="{StaticResource MaterialDesignFlatButton}"
                                       Margin="0,20,0,0" 
                                       HorizontalAlignment="Left"
                                       Click="BtnResetPosition_Click"/>
                            </StackPanel>
                        </materialDesign:Card>

                        
                        <materialDesign:Card Padding="30" Margin="0,0,0,20" UniformCornerRadius="8">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,25">
                                    <materialDesign:PackIcon Kind="TuneVariant" Width="24" Height="24" 
                                                            VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Дополнительные настройки" 
                                              FontSize="18" FontWeight="SemiBold" 
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <CheckBox x:Name="ChkAutoStart" 
                                         Content="Запускать с Windows" 
                                         Margin="0,0,0,15" 
                                         Checked="ChkAutoStart_Changed" 
                                         Unchecked="ChkAutoStart_Changed"/>
                                
                                <CheckBox x:Name="ChkMinimizeToTray" 
                                         Content="Сворачивать в системный трей" 
                                         Margin="0,0,0,15" 
                                         Checked="ChkMinimizeToTray_Changed" 
                                         Unchecked="ChkMinimizeToTray_Changed"/>
                                
                                <CheckBox x:Name="ChkStartMinimized" 
                                         Content="Запускать в свернутом виде" 
                                         Margin="0,0,0,15" 
                                         Checked="ChkStartMinimized_Changed" 
                                         Unchecked="ChkStartMinimized_Changed"/>
                                
                                <CheckBox x:Name="ChkSavePosition" 
                                         Content="Автоматически сохранять позицию индикатора" 
                                         IsChecked="True"
                                         Checked="ChkSavePosition_Changed" 
                                         Unchecked="ChkSavePosition_Changed"/>
                            </StackPanel>
                        </materialDesign:Card>

                        <Button Content="СОХРАНИТЬ ВСЕ НАСТРОЙКИ" 
                               Style="{StaticResource MaterialDesignRaisedButton}"
                               Width="250" Height="45"
                               HorizontalAlignment="Left"
                               Click="BtnApplySettings_Click"/>
                    </StackPanel>

                    
                    <StackPanel x:Name="PageAbout" Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <materialDesign:PackIcon Kind="InformationOutline" Width="32" Height="32" 
                                                    VerticalAlignment="Center" Margin="0,0,15,0"/>
                            <TextBlock Text="О программе" 
                                      FontSize="28" FontWeight="Bold" 
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Text="Информация о приложении и системе" 
                                  Foreground="{StaticResource SecondaryForegroundBrush}"
                                  FontSize="14" Margin="0,0,0,30"/>

                        <materialDesign:Card Padding="30" Margin="0,0,0,20" UniformCornerRadius="8">
                            <StackPanel>
                                <materialDesign:PackIcon Kind="ChartDonut" 
                                                        Width="64" Height="64"
                                                        HorizontalAlignment="Center"
                                                        Margin="0,0,0,20"/>
                                
                                <TextBlock Text="FCI" 
                                          FontSize="28" FontWeight="Bold" 
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,5"/>
                                
                                <TextBlock Text="FakeCheatIndicator" 
                                          FontSize="14" 
                                          Foreground="{StaticResource SecondaryForegroundBrush}"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,8"/>
                                
                                <TextBlock Text="Версия 2.0.0 Material Design" 
                                          Foreground="{StaticResource SecondaryForegroundBrush}"
                                          FontSize="14" 
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,20"/>
                                
                                <TextBlock Text="Программа для отображения настраиваемого индикатора на экране с современным Material Design интерфейсом." 
                                          FontSize="14" TextWrapping="Wrap" 
                                          TextAlignment="Center"
                                          Margin="0,0,0,10"/>
                                
                                <TextBlock Text="Полностью переработанная версия с WPF, расширенными настройками и улучшенной производительностью." 
                                          Foreground="{StaticResource SecondaryForegroundBrush}"
                                          FontSize="13" TextWrapping="Wrap" 
                                          TextAlignment="Center"/>
                            </StackPanel>
                        </materialDesign:Card>

                        <materialDesign:Card Padding="30" Margin="0,0,0,20" UniformCornerRadius="8">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                    <materialDesign:PackIcon Kind="StarCircle" Width="24" Height="24" 
                                                            VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Возможности v2.0" 
                                              FontSize="18" FontWeight="SemiBold" 
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <materialDesign:PackIcon Kind="CheckBold" Foreground="{StaticResource SuccessBrush}"
                                                            Width="20" Height="20" Margin="0,0,10,0"/>
                                    <TextBlock Text="Современный Material Design интерфейс" FontSize="14"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <materialDesign:PackIcon Kind="CheckBold" Foreground="{StaticResource SuccessBrush}"
                                                            Width="20" Height="20" Margin="0,0,10,0"/>
                                    <TextBlock Text="Темная минималистичная тема" FontSize="14"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <materialDesign:PackIcon Kind="CheckBold" Foreground="{StaticResource SuccessBrush}"
                                                            Width="20" Height="20" Margin="0,0,10,0"/>
                                    <TextBlock Text="Расширенные настройки внешнего вида" FontSize="14"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <materialDesign:PackIcon Kind="CheckBold" Foreground="{StaticResource SuccessBrush}"
                                                            Width="20" Height="20" Margin="0,0,10,0"/>
                                    <TextBlock Text="5 цветовых схем индикатора" FontSize="14"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <materialDesign:PackIcon Kind="CheckBold" Foreground="{StaticResource SuccessBrush}"
                                                            Width="20" Height="20" Margin="0,0,10,0"/>
                                    <TextBlock Text="Автозапуск и работа в трее" FontSize="14"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="CheckBold" Foreground="{StaticResource SuccessBrush}"
                                                            Width="20" Height="20" Margin="0,0,10,0"/>
                                    <TextBlock Text="Автосохранение всех настроек" FontSize="14"/>
                                </StackPanel>
                            </StackPanel>
                        </materialDesign:Card>

                        <materialDesign:Card Padding="30" UniformCornerRadius="8">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                    <materialDesign:PackIcon Kind="Monitor" Width="24" Height="24" 
                                                            VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Системная информация" 
                                              FontSize="18" FontWeight="SemiBold" 
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <TextBlock x:Name="TxtSystemInfo" 
                                          Foreground="{StaticResource SecondaryForegroundBrush}"
                                          FontSize="13" 
                                          FontFamily="Consolas"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </materialDesign:DialogHost>
</Window>
